DATASET_PATH=data/raw/conversations.csv
TOXICITY_THRESHOLD=0.5
OUTPUT_DIR=outputs

# Guardrails AI Hub Token (required for Docker builds)
# Get your token from: https://hub.guardrailsai.com/keys
GUARDRAILS_TOKEN=your_token_here

# Kafka configuration
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=guardrail.violations

# Alert consumer configuration
ALERT_WINDOW_SIZE_SECONDS=300
ALERT_OUTPUT_FILE=outputs/alerts.jsonl
ALERT_CONSUMER_GROUP=alert-consumer-group

# Kafka input processor configuration
KAFKA_INPUT_TOPIC=llm.conversations
KAFKA_INPUT_CONSUMER_GROUP=guardrail-input-processor-group
KAFKA_INPUT_OUTPUT_FILE=outputs/kafka_violations.jsonl
